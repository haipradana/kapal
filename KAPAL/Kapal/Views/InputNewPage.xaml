<Page x:Class="Kapal.Views.InputNewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
   Title="Input New"
      Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Width="1114">
        <StackPanel Margin="32,24,32,32">

            <!-- Header -->
            <TextBlock Text="Input New Data" FontSize="32" FontWeight="Bold" Foreground="#0F172A" Margin="0,0,0,8"/>
            <TextBlock Text="Tambah data vessel baru atau landing baru" FontSize="14" Foreground="#64748B" Margin="0,0,0,32"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                <Button x:Name="btnAddVessel" Click="BtnAddVessel_Click"
  Style="{StaticResource ActionButtonStyle}" Background="#DBEAFE" Foreground="#1E40AF" Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PlusCircle" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Add New Vessel" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnAddLanding" Click="BtnAddLanding_Click" IsEnabled="False"
      Style="{StaticResource ActionButtonStyle}" Background="#D1FAE5" Foreground="#047857">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Anchor" Width="18" Height="18" Margin="0,0,8,0"/>
                        <TextBlock Text="Add New Landing" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Vessel List -->
            <Border CornerRadius="12" Background="White" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Vessel List" FontSize="18" FontWeight="SemiBold" Foreground="#1E293B" Margin="0,0,0,16"/>

                    <!-- Search -->
                    <DockPanel Margin="0,0,0,16" Height="40">
                        <Grid Width="300" Height="36" DockPanel.Dock="Left" Margin="0,0,8,0">
                            <Border CornerRadius="8" BorderBrush="#CBD5E1" BorderThickness="1" Background="White">
                                <Grid>
                                    <TextBox x:Name="tbSearch" Padding="32,8,12,8" VerticalContentAlignment="Center"
                         BorderThickness="0" Background="Transparent"
                         TextChanged="tbSearch_TextChanged"
                         GotFocus="tbSearch_GotFocus"
                         LostFocus="tbSearch_LostFocus" Margin="0,0,0,-4"/>
                                    <materialDesign:PackIcon x:Name="iconSearch" Kind="Magnify" 
                                         Width="18" Height="18" 
                                         Foreground="#94A3B8"
                                         VerticalAlignment="Center"
                                         HorizontalAlignment="Left"
                                         Margin="10,0,0,0"
                                         IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <Button Content="Search" Width="100" Click="BtnSearch_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0" Height="38"/>
                        <Button Content="Reset" Width="100" Click="BtnReset_Click" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,4,0" Height="38"/>
                        <Button Content="Refresh" Width="100" Click="BtnRefresh_Click" Style="{StaticResource SecondaryButtonStyle}" Height="38" HorizontalAlignment="Right"/>
                    </DockPanel>

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgVessels" Height="400" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
   SelectionMode="Single" SelectionChanged="DgVessels_SelectionChanged"
      HeadersVisibility="Column" GridLinesVisibility="None" Background="White"
        RowBackground="White" AlternatingRowBackground="#F9FAFB"
    BorderBrush="#E2E8F0" BorderThickness="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding VesselId}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Reg Number" Binding="{Binding RegNumber}" Width="140"/>
                            <DataGridTextColumn Header="Owner" Binding="{Binding OwnerName}" Width="*"/>
                            <DataGridTextColumn Header="Gear" Binding="{Binding Gear}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Page>
