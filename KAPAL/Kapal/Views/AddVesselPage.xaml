<Page x:Class="Kapal.Views.AddVesselPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Add Vessel">

    <Page.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#3B82F6"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F8FAFC">
        <!-- Main Card Container -->
        <Border Background="White"
                CornerRadius="12"
                Margin="32"
                Padding="0"
                MaxWidth="800"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                Opacity="0.08" 
                                BlurRadius="24" 
                                ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <Border Grid.Row="0" 
                        Background="#F8FAFC"
                        CornerRadius="12,12,0,0"
                        Padding="32,24">
                    <StackPanel>
                        <TextBlock Text="Add Vessel" 
                                  FontSize="24" 
                                  FontWeight="Bold"
                                  Foreground="#0F172A"/>
                        <TextBlock Text="Fill in the vessel information below" 
                                  FontSize="13" 
                                  Foreground="#64748B"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Form Content -->
                <StackPanel Grid.Row="1" Margin="32,24">
                    <!-- Name Field -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Name" 
                                  Style="{StaticResource ModernLabel}"/>
                        <TextBox Grid.Column="1" 
                                x:Name="tbName" 
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>

                    <!-- Registration Number Field -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Reg Number" 
                                  Style="{StaticResource ModernLabel}"/>
                        <TextBox Grid.Column="1" 
                                x:Name="tbReg" 
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>

                    <!-- Owner Name Field -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Owner Name" 
                                  Style="{StaticResource ModernLabel}"/>
                        <TextBox Grid.Column="1" 
                                x:Name="tbOwner" 
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>

                    <!-- Gear Field -->
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Gear" 
                                  Style="{StaticResource ModernLabel}"/>
                        <TextBox Grid.Column="1" 
                                x:Name="tbGear" 
                                Style="{StaticResource ModernTextBox}"/>
                    </Grid>
                </StackPanel>

                <!-- Footer with Buttons -->
                <Border Grid.Row="2" 
                        Background="#F8FAFC"
                        CornerRadius="0,0,12,12"
                        Padding="32,20"
                        BorderBrush="#E2E8F0"
                        BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Right">
                        <Button Content="Back" 
                                Width="100"
                                Height="40"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="BtnBack_Click"/>
                        <Button Content="Save and Next" 
                                Width="140" 
                                Height="40"
                                Margin="12,0,0,0"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="BtnSaveNext_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>