<Page x:Class="Kapal.Views.AddVesselPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Vessel">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Add Vessel" FontSize="18" FontWeight="Bold" Margin="0 0 0 12"/>
            <UniformGrid Columns="2" Rows="4" Margin="0 0 0 12">
                <TextBlock Text="Name" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <TextBox x:Name="tbName" Margin="0 0 0 8"/>

                <TextBlock Text="Reg Number" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <TextBox x:Name="tbReg" Margin="0 0 0 8"/>

                <TextBlock Text="Owner Name" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <TextBox x:Name="tbOwner" Margin="0 0 0 8"/>

                <TextBlock Text="Gear" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <TextBox x:Name="tbGear" Margin="0 0 0 8"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Back" Width="100" Click="BtnBack_Click"/>
            <Button Content="Save and Next" Width="140" Margin="8 0 0 0" Click="BtnSaveNext_Click"/>
        </StackPanel>
    </Grid>
</Page>
