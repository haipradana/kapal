<Page x:Class="Kapal.Views.AddVesselPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 Title="Add Vessel"
      Background="#F8FAFC">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Width="744" Height="730">
        <Grid MaxWidth="800" Margin="32,24,32,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->

            <!-- Form Section -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                <Border Background="#DBEAFE" CornerRadius="10" Padding="8" Margin="0,0,12,0" Width="55">
                    <materialDesign:PackIcon Kind="Ferry" Width="37" Height="40" Foreground="#3B82F6"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Add New Vessel" FontSize="28" FontWeight="Bold" Foreground="#0F172A"/>
                    <TextBlock Text="Tambahkan data vessel baru ke sistem" FontSize="14" Foreground="#64748B" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Form Section -->
            <Border Grid.Row="1" CornerRadius="16" Background="White" 
                BorderBrush="#E2E8F0" BorderThickness="1" Padding="32" Height="496" VerticalAlignment="Top" HorizontalAlignment="Center" Width="680" Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Vessel Information" FontSize="18" FontWeight="SemiBold" 
           Foreground="#1E293B" Margin="0,0,0,24"/>

                    <!-- Vessel Name -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Ship" Width="16" Height="16" 
     Foreground="#3B82F6" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Vessel Name" FontSize="14" FontWeight="SemiBold" 
   Foreground="#1E293B" VerticalAlignment="Center"/>
                            <TextBlock Text="*" Foreground="#EF4444" Margin="4,0,0,0" FontWeight="Bold"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <TextBox x:Name="tbName" Height="44" Padding="16,0" 
                VerticalContentAlignment="Center" BorderThickness="0"
      FontSize="14" Background="Transparent"
         materialDesign:HintAssist.Hint="Enter vessel name"/>
                        </Border>
                    </StackPanel>

                    <!-- Registration Number -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Identifier" Width="16" Height="16" 
  Foreground="#8B5CF6" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Registration Number" FontSize="14" FontWeight="SemiBold" 
    Foreground="#1E293B" VerticalAlignment="Center"/>
                            <TextBlock Text="*" Foreground="#EF4444" Margin="4,0,0,0" FontWeight="Bold"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <TextBox x:Name="tbReg" Height="44" Padding="16,0" 
           VerticalContentAlignment="Center" BorderThickness="0"
       FontSize="14" Background="Transparent"
  materialDesign:HintAssist.Hint="e.g., ABC-12345"/>
                        </Border>
                    </StackPanel>

                    <!-- Owner Name -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Account" Width="16" Height="16" 
        Foreground="#10B981" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Owner Name" FontSize="14" FontWeight="SemiBold" 
       Foreground="#1E293B" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <TextBox x:Name="tbOwner" Height="44" Padding="16,0" 
           VerticalContentAlignment="Center" BorderThickness="0"
 FontSize="14" Background="Transparent"
       materialDesign:HintAssist.Hint="Enter owner name (optional)"/>
                        </Border>
                    </StackPanel>

                    <!-- Gear Type -->
                    <StackPanel Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" 
            Foreground="#F59E0B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Gear Type" FontSize="14" FontWeight="SemiBold" 
         Foreground="#1E293B" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <TextBox x:Name="tbGear" Height="44" Padding="16,0" 
   VerticalContentAlignment="Center" BorderThickness="0"
         FontSize="14" Background="Transparent"
      materialDesign:HintAssist.Hint="e.g., Gillnet, Purse Seine (optional)"/>
                        </Border>
                    </StackPanel>

                    <!-- Required Fields Note -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <materialDesign:PackIcon Kind="InformationOutline" Width="14" Height="14" 
            Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Fields marked with * are required" 
            FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Click="BtnBack_Click" Height="44" Padding="20,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#64748B"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
         BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
 CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" 
              VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Back" FontSize="14" FontWeight="SemiBold" 
   VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="BtnSaveNext_Click" Height="44" Padding="20,0" Margin="12,0,0,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#3B82F6"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" 
        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="Save &amp; Next" FontSize="14" FontWeight="SemiBold" 
VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <materialDesign:PackIcon Kind="ArrowRight" Width="18" Height="18" 
  VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
