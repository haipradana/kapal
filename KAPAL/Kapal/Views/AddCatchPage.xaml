<Page x:Class="Kapal.Views.AddCatchPage"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Add Catch"
      Background="#F8FAFC">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Width="908">
        <Grid MaxWidth="900" Margin="32,24,32,32" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#FFF4E6" CornerRadius="10" Padding="8" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="Fish" Width="28" Height="28" Foreground="#F59E0B"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Add Catch Data" FontSize="28" FontWeight="Bold" Foreground="#0F172A"/>
                        <TextBlock Text="Catat jenis dan berat ikan yang ditangkap" FontSize="14" Foreground="#64748B" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Landing Info Card -->
            <Border Grid.Row="1" CornerRadius="12" Background="#F1F5F9" Padding="16" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <materialDesign:PackIcon Kind="Anchor" Width="16" Height="16" 
   Foreground="#10B981" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Selected Landing" FontSize="12" FontWeight="SemiBold" 
       Foreground="#64748B" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="lblLanding" FontSize="16" FontWeight="SemiBold" 
 Foreground="#1E293B" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Form and List Section -->
            <Border Grid.Row="1" CornerRadius="16" Background="White" 
   BorderBrush="#E2E8F0" BorderThickness="1" Padding="32" Margin="0,101,0,68" Grid.RowSpan="3">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Form Input -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Add Species" FontSize="18" FontWeight="SemiBold" 
   Foreground="#1E293B" Margin="0,0,0,24"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Species Name -->
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <materialDesign:PackIcon Kind="Fish" Width="16" Height="16" 
      Foreground="#F59E0B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Species Name" FontSize="14" FontWeight="SemiBold" 
                  Foreground="#1E293B" VerticalAlignment="Center"/>
                                    <TextBlock Text="*" Foreground="#EF4444" Margin="4,0,0,0" FontWeight="Bold"/>
                                </StackPanel>
                                <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                                    <TextBox x:Name="tbSpecies" Height="44" Padding="16,0" 
    VerticalContentAlignment="Center" BorderThickness="0"
              FontSize="14" Background="Transparent"
       materialDesign:HintAssist.Hint="e.g., Tuna, Mackerel"/>
                                </Border>
                            </StackPanel>

                            <!-- Weight -->
                            <StackPanel Grid.Column="2">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <materialDesign:PackIcon Kind="Weight" Width="16" Height="16" 
  Foreground="#8B5CF6" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="Weight (kg)" FontSize="14" FontWeight="SemiBold" 
Foreground="#1E293B" VerticalAlignment="Center"/>
                                    <TextBlock Text="*" Foreground="#EF4444" Margin="4,0,0,0" FontWeight="Bold"/>
                                </StackPanel>
                                <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                                    <TextBox x:Name="tbWeight" Height="44" Padding="16,0" 
      VerticalContentAlignment="Center" BorderThickness="0"
       FontSize="14" Background="Transparent"
        materialDesign:HintAssist.Hint="0.00"/>
                                </Border>
                            </StackPanel>

                            <!-- Add Button -->
                            <Button x:Name="btnAddSpecies" Grid.Column="4" Height="44" Padding="20,0" 
  Click="BtnAddSpecies_Click" Cursor="Hand" VerticalAlignment="Bottom">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#F59E0B"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" 
        VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                            <TextBlock Text="Add" FontSize="14" FontWeight="SemiBold" 
          VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D97706"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <!-- Divider -->
                    <Border Grid.Row="1" Height="1" Background="#E2E8F0" Margin="0,24"/>

                    <!-- Species List -->
                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Width="18" Height="18" 
              Foreground="#1E293B" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Species List" FontSize="16" FontWeight="SemiBold" 
     Foreground="#1E293B" VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtTotalSpecies" Text="(0 species)" FontSize="14" 
         Foreground="#64748B" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <DataGrid x:Name="dgSpecies" Height="167"
             AutoGenerateColumns="False" CanUserAddRows="False"
               IsReadOnly="True" SelectionMode="Single"
  HeadersVisibility="Column" GridLinesVisibility="None" 
     Background="White" RowBackground="White" AlternatingRowBackground="#F9FAFB"
          BorderBrush="#E2E8F0" BorderThickness="1" SelectionChanged="dgSpecies_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="No" Binding="{Binding No}" Width="60">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#64748B"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Species Name" Binding="{Binding Species}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#1E293B"/>
                                            <Setter Property="FontWeight" Value="Medium"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Weight (kg)" Binding="{Binding WeightKg}" Width="140">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#0F172A"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Actions" Width="120">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Remove" Padding="12,6"
              CommandParameter="{Binding}"
                  Click="BtnRemoveRow_Click"
       Background="#FEE2E2" Foreground="#DC2626"
        BorderThickness="0" Cursor="Hand"
     FontSize="12" FontWeight="SemiBold">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
       CornerRadius="6" Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
          VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FECACA"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Click="BtnBack_Click" Height="44" Padding="20,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#64748B"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
              BorderBrush="{TemplateBinding BorderBrush}"
        BorderThickness="{TemplateBinding BorderThickness}"
        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" 
 VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Back" FontSize="14" FontWeight="SemiBold" 
         VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="BtnClear_Click" Height="44" Padding="20,0" Margin="12,0,0,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#DC2626"/>
                            <Setter Property="BorderBrush" Value="#FCA5A5"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
    BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
  CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="TrashCan" Width="18" Height="18" 
           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Clear All" FontSize="14" FontWeight="SemiBold" 
     VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEE2E2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="BtnSave_Click" Height="44" Padding="20,0" Margin="12,0,0,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#10B981"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
         CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" 
  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Save All" FontSize="14" FontWeight="SemiBold" 
    VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
