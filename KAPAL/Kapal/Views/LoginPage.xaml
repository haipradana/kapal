<Page x:Class="Kapal.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Login"
      Background="#F8FAFC">
	<Grid>
		<!-- Background Design -->
		<Grid.Background>
			<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
				<GradientStop Color="#E0F2FE" Offset="0"/>
				<GradientStop Color="#DBEAFE" Offset="1"/>
			</LinearGradientBrush>
		</Grid.Background>

		<!-- Login Card -->
		<Border Width="450" Height="634" CornerRadius="16" Background="White"
         BorderBrush="#E2E8F0" BorderThickness="1" VerticalAlignment="Center">
			<Border.Effect>
				<DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="20" ShadowDepth="0"/>
			</Border.Effect>

			<StackPanel Margin="48,40">
				<!-- Logo & Title -->
				<Border Background="#DBEAFE" CornerRadius="12" Width="71" Height="72" 
      HorizontalAlignment="Center" Margin="0,0,0,24">
					<materialDesign:PackIcon Kind="Ferry" Width="48" Height="48" 
        Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Border>

				<TextBlock Text="KAPAL" FontSize="32" FontWeight="Bold" 
   Foreground="#0F172A" HorizontalAlignment="Center" FontFamily="Segoe UI Emoji"/>
				<TextBlock Text="Katalog Pelabuhan dan Laporan Ikan" FontSize="14" 
        Foreground="#64748B" HorizontalAlignment="Center" Margin="0,4,0,32"/>

				<!-- Username Field -->
				<TextBlock Text="Username" FontSize="14" FontWeight="SemiBold" 
      Foreground="#1E293B" Margin="0,0,0,8"/>
				<Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,20">
					<TextBox x:Name="txtUsername" Height="44" Padding="16,0" 
          VerticalContentAlignment="Center" BorderThickness="0"
      FontSize="14" Background="Transparent"/>
				</Border>

				<!-- Password Field -->
				<TextBlock Text="Password" FontSize="14" FontWeight="SemiBold" 
               Foreground="#1E293B" Margin="0,0,0,8"/>
				<Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Margin="0,0,0,32">
					<PasswordBox x:Name="txtPassword" Height="44" Padding="16,0" 
        VerticalContentAlignment="Center" BorderThickness="0"
FontSize="14" Background="Transparent"/>
				</Border>

				<!-- Login Button -->
				<Button x:Name="btnLogin" Content="Login" Height="48" 
   FontSize="16" FontWeight="SemiBold" Cursor="Hand"
    Click="BtnLogin_Click" Margin="0,0,0,12">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="#3B82F6"/>
							<Setter Property="Foreground" Value="White"/>
							<Setter Property="BorderThickness" Value="0"/>
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="Button">
										<Border Background="{TemplateBinding Background}" 
    CornerRadius="8" Padding="{TemplateBinding Padding}">
											<ContentPresenter HorizontalAlignment="Center" 
     VerticalAlignment="Center"/>
										</Border>
									</ControlTemplate>
								</Setter.Value>
							</Setter>
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#2563EB"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter Property="Background" Value="#CBD5E1"/>
									<Setter Property="Cursor" Value="Wait"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!-- Guest Login Button -->
				<Button x:Name="btnGuest" Content="Login as Guest" Height="48" 
         FontSize="16" FontWeight="SemiBold" Cursor="Hand"
           Click="BtnGuest_Click">
					<Button.Style>
						<Style TargetType="Button">
							<Setter Property="Background" Value="Transparent"/>
							<Setter Property="Foreground" Value="#64748B"/>
							<Setter Property="BorderBrush" Value="#E2E8F0"/>
							<Setter Property="BorderThickness" Value="1"/>
							<Setter Property="Template">
								<Setter.Value>
									<ControlTemplate TargetType="Button">
										<Border Background="{TemplateBinding Background}" 
              BorderBrush="{TemplateBinding BorderBrush}"
         BorderThickness="{TemplateBinding BorderThickness}"
     CornerRadius="8" Padding="{TemplateBinding Padding}">
											<ContentPresenter HorizontalAlignment="Center" 
    VerticalAlignment="Center"/>
										</Border>
									</ControlTemplate>
								</Setter.Value>
							</Setter>
							<Style.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter Property="Background" Value="#F1F5F9"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter Property="Background" Value="#F8FAFC"/>
									<Setter Property="Foreground" Value="#CBD5E1"/>
									<Setter Property="Cursor" Value="Wait"/>
								</Trigger>
							</Style.Triggers>
						</Style>
					</Button.Style>
				</Button>

				<!-- Footer Text -->
				<TextBlock Text="Guest mode: view only access" 
   FontSize="12" Foreground="#94A3B8" 
         HorizontalAlignment="Center" Margin="0,24,0,0"/>
			</StackPanel>
		</Border>
	</Grid>
</Page>
