<Page x:Class="Kapal.Views.AddLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Add Landing">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Add Landing" FontSize="18" FontWeight="Bold" Margin="0 0 0 12"/>
            <TextBlock x:Name="lblVessel" Margin="0 0 0 12" />
            <UniformGrid Columns="2" Rows="2" Margin="0 0 0 12">
                <TextBlock Text="Landed At (UTC)" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpLandedAt" Margin="0 0 0 8"/>

                <TextBlock Text="Notes" Margin="0 0 8 8" VerticalAlignment="Center"/>
                <TextBox x:Name="tbNotes" Margin="0 0 0 8"/>
            </UniformGrid>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Back" Width="100" Click="BtnBack_Click"/>
            <Button Content="Save and Next" Width="140" Margin="8 0 0 0" Click="BtnSaveNext_Click"/>
        </StackPanel>
    </Grid>
</Page>
