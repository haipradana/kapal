<Page x:Class="Kapal.Views.AddLandingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
  Title="Add Landing"
      Background="#F8FAFC">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Width="754">
        <Grid MaxWidth="800" Margin="32,24,32,32" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Border Background="#E0F2F1" CornerRadius="10" Padding="8" Margin="0,0,12,0" Height="43">
                        <materialDesign:PackIcon Kind="Anchor" Width="28" Height="28" Foreground="#10B981"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Add New Landing" FontSize="28" FontWeight="Bold" Foreground="#0F172A"/>
                        <TextBlock Text="Catat data pendaratan kapal" FontSize="14" Foreground="#64748B" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Form Section -->
            <Border Grid.Row="1" CornerRadius="16" Background="White" 
             BorderBrush="#E2E8F0" BorderThickness="1" Padding="32" HorizontalAlignment="Center" Width="644">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="10" ShadowDepth="0"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Landing Information" FontSize="18" FontWeight="SemiBold" 
           Foreground="#1E293B" Margin="0,0,0,24"/>

                    <!-- Selected Vessel Info -->
                    <Border CornerRadius="8" Background="#F1F5F9" Padding="16" Margin="0,0,0,24">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <materialDesign:PackIcon Kind="Ferry" Width="16" Height="16" 
   Foreground="#3B82F6" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="Selected Vessel" FontSize="12" FontWeight="SemiBold" 
    Foreground="#64748B" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock x:Name="lblVessel" FontSize="16" FontWeight="SemiBold" 
      Foreground="#1E293B" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Landing Date/Time -->
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="CalendarClock" Width="16" Height="16" 
 Foreground="#8B5CF6" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Landing Date &amp; Time (UTC)" FontSize="14" FontWeight="SemiBold" 
       Foreground="#1E293B" VerticalAlignment="Center"/>
                            <TextBlock Text="*" Foreground="#EF4444" Margin="4,0,0,0" FontWeight="Bold"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <DatePicker x:Name="dpLandedAt" Height="44" Padding="16,0" 
  VerticalContentAlignment="Center" BorderThickness="0"
FontSize="14" Background="Transparent"
       materialDesign:HintAssist.Hint="Select landing date"/>
                        </Border>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="14" Height="14" 
    Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Pastikan menggunakan waktu UTC" 
FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Notes -->
                    <StackPanel Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="NoteText" Width="16" Height="16" 
     Foreground="#F59E0B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock Text="Notes / Remarks" FontSize="14" FontWeight="SemiBold" 
Foreground="#1E293B" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border CornerRadius="8" BorderBrush="#E2E8F0" BorderThickness="1" Background="White">
                            <TextBox x:Name="tbNotes" Height="100" Padding="16,12" 
    TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
      VerticalContentAlignment="Top" BorderThickness="0"
    FontSize="14" Background="Transparent"
      materialDesign:HintAssist.Hint="Catatan tambahan (opsional)"/>
                        </Border>
                    </StackPanel>

                    <!-- Required Fields Note -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <materialDesign:PackIcon Kind="InformationOutline" Width="14" Height="14" 
     Foreground="#64748B" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Fields marked with * are required" 
   FontSize="12" Foreground="#64748B" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Click="BtnBack_Click" Height="44" Padding="20,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#64748B"/>
                            <Setter Property="BorderBrush" Value="#E2E8F0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
 BorderBrush="{TemplateBinding BorderBrush}"
      BorderThickness="{TemplateBinding BorderThickness}"
   CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <materialDesign:PackIcon Kind="ArrowLeft" Width="18" Height="18" 
  VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <TextBlock Text="Back" FontSize="14" FontWeight="SemiBold" 
VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F1F5F9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="BtnSaveNext_Click" Height="44" Padding="20,0" Margin="12,0,0,0" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#10B981"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <TextBlock Text="Save &amp; Next" FontSize="14" FontWeight="SemiBold" 
     VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <materialDesign:PackIcon Kind="ArrowRight" Width="18" Height="18" 
   VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#059669"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
