<Page x:Class="Kapal.Views.LandingDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="Data Landing"
   Background="#F8FAFC">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
<StackPanel Margin="32,24,32,32">
     
      <!-- Header -->
    <TextBlock Text="Data Landing" FontSize="32" FontWeight="Bold" Foreground="#0F172A" Margin="0,0,0,8"/>
  <TextBlock Text="View all landing records with vessel information" FontSize="14" Foreground="#64748B" Margin="0,0,0,32"/>

   <!-- Content -->
 <Border CornerRadius="12" Background="White" Padding="24" BorderBrush="#E2E8F0" BorderThickness="1">
<StackPanel>
        <DockPanel Margin="0,0,0,16">
<Button Click="BtnRefresh_Click" DockPanel.Dock="Right"
     Style="{StaticResource SecondaryButtonStyle}"
     ToolTip="Refresh" Height="41">
    <StackPanel Orientation="Horizontal">
        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;" FontSize="16" Margin="0,0,8,0" Height="16"/>
        <TextBlock Text="Refresh"/>
    </StackPanel>
</Button>
  <TextBlock Text="Landing List" FontSize="18" FontWeight="SemiBold" Foreground="#1E293B" VerticalAlignment="Center"/>
       </DockPanel>

  <!-- DataGrid -->
    <DataGrid x:Name="dgLandings" Height="550" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
        SelectionMode="Single"
HeadersVisibility="Column" GridLinesVisibility="None" Background="White"
       RowBackground="White" AlternatingRowBackground="#F9FAFB"
     BorderBrush="#E2E8F0" BorderThickness="1">
   <DataGrid.Columns>
       <DataGridTextColumn Header="Landing ID" Binding="{Binding LandingId}" Width="100"/>
<DataGridTextColumn Header="Vessel Name" Binding="{Binding VesselName}" Width="*"/>
   <DataGridTextColumn Header="Landed At" Binding="{Binding LandedAt, StringFormat=dd/MM/yyyy HH:mm}" Width="160"/>
     <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
          </DataGrid.Columns>
    </DataGrid>
   </StackPanel>
     </Border>

        </StackPanel>
  </ScrollViewer>
</Page>
